{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES6",
    "module": "NodeNext",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "mocha"],
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": false
  },
  "include": ["./src", "./test"],
  "exclude": ["dist", "node_modules"],
  "ts-node": {
    "files": true
  }
}
